# Django Settings
# Generate a secure SECRET_KEY using: python3 -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Default SQLite for development - change for PostgreSQL)
DATABASE_URL=sqlite:///db.sqlite3

# Redis Configuration (Redis for development - optional)
REDIS_URL=redis://localhost:6379/1

# Celery Configuration (RabbitMQ for message broker, Redis for results)
CELERY_BROKER_URL=amqp://user:password@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000,http://127.0.0.1:8000

# File Upload Settings
MAX_UPLOAD_SIZE=5242880
ALLOWED_FILE_EXTENSIONS=pdf,doc,docx,txt
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif
