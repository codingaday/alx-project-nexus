[flake8]
exclude =
    migrations,
    __pycache__
    manage.py,
    settings.py ,
    .venv,
    *.pyc,
    core/management/commands/seed_data.py  # Exclude seed data (high error count)

ignore =
    # Import and line length issues
    E402,   # module level import not at top of file
    E501,   # line too long (covered by max-line-length but included)

    # Basic style ignore rules
    E122,
    E128,
    E203,
    E251,  # unexpected spaces around keyword / parameter equals
    E265,
    E302,
    E303,
    E305,

    # Trailing whitespace and blank lines
    W291,
    W293,
    W391,

    # Unused imports/variables (for rapid development)
    F401,
    F811,
    F841

max-line-length = 150  # Increased for Django template strings and imports
