[flake8]
exclude =
    migrations,
    __pycache__
    manage.py,
    settings.py ,
    .venv,
    *.pyc,
    core/management/commands/seed_data.py  # Exclude seed data (high error count)

ignore =
    E122,
    E128,
    E203,
    E251,
    E265,
    E302,
    E303,
    E305,
    E402,
    E501,
    W291,
    W293,
    W391,
    F401,
    F811,
    F841

max-line-length = 150  # Increased for Django template strings and imports
